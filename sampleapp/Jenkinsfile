pipeline {
    agent any
    environment {
        ARM_CLIENT_ID = credentials('ARM_CLIENT_ID')
        ARM_CLIENT_SECRET = credentials('ARM_CLIENT_SECRET')
        ARM_TENANT_ID = credentials('ARM_TENANT_ID')
        ARM_SUBSCRIPTION_ID = credentials('ARM_SUBSCRIPTION_ID')
        CONTAINER_REGISTRY = "azurecontainer77"
        REGISTRY_URL = "azurecontainer77.azurecr.io"
        AZURESP = credentials('azuresp')
        RESOURCE_GROUP = "acr"
        dockerImage = ''
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: ' https://github.com/SaiPrabhu88/neom-aks.git']])
            }
        }
        stage('Build Image') {
            steps {
                withCredentials([azureServicePrincipal(credentialsId: 'azuresp')]) {
                sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t AZURE_TENANT_ID'
                }
            }
        }
    }
}