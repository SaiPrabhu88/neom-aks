pipeline {
    agent any
    environment {
        AZURESP = credentials('azuresp')
        CONTAINER_REGISTRY = "azurecontainer77"
        REGISTRY_URL = "azurecontainer77.azurecr.io"
        AZURESP = credentials('azuresp')
        RESOURCE_GROUP = "acr"
        dockerImage = ''
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: ' https://github.com/SaiPrabhu88/neom-aks.git']])
            }
        }
        stage('Build Image') {
            steps {
                sh 'az login --service-principal -u $AZURESP_CLIENT_ID -p $AZURESP_CLIENT_SECRET -t $AZURESP_TENANT_ID'
            }
        }
    }
}