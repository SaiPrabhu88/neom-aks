pipeline {
    agent any
    environment {
        CONTAINER_REGISTRY = "azurecontainer77"
        REGISTRY_URL = "azurecontainer77.azurecr.io"
        AZURESP = credentials('azuresp')
        RESOURCE_GROUP = "acr"
        dockerImage = ''
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: ' https://github.com/SaiPrabhu88/neom-aks.git']])
            }
        }
        stage('Build Image') {
            steps {
                withCredentials([azureServicePrincipal(credentialsId: 'azuresp', subscriptionIdVariable: 'SUBS_ID', clientIdVariable: 'CLIENT_ID', clientSecretVariable: 'CLIENT_SECRET', tenantIdVariable: 'TENANT_ID')]) {
                sh '''
                az login --service-principal -u "$CLIENT_ID" -p "$CLIENT_SECRET" -t "TENANT_ID"
                az account set -s "$SUBS_ID"
                '''
                }
            }
        }
    }
}