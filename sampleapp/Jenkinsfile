pipeline {
    agent any
    environment {
        CONTAINER_REGISTRY = "azurecontainer77"
        REGISTRY_URL = "azurecontainer77.azurecr.io"
        AZURESP = credentials('azuresp')
        RESOURCE_GROUP = "acr"
        dockerImage = ''
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: ' https://github.com/SaiPrabhu88/neom-aks.git']])
            }
        }
        stage('Build Image') {
            steps {
                script {
                    dockerImage = docker.build CONTAINER_REGISTRY
                }
            }
        }
        stage('Push Image') {
            steps {
                script {
                    docker.withRegistry( "http://${REGISTRY_URL}", AZURESP ) {
                    dockerImage.push()
                    }
                }
            }
        }
    }
}